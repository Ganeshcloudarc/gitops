<launch>
    <arg name="rviz" default="false"/>
    <arg name="param_file" default="$(find collision_monitor)/params/collision_monitor_params.yaml"/>
    
    <node pkg="collision_monitor" type="collision_monitor_core.py" name="collision_monitor_core" output="screen">
        <rosparam command="load" file="$(arg param_file)"/>
    </node>
    <node name="rviz_collision_monitor" pkg="rviz" type="rviz" args="-d $(find collision_monitor)/rviz/collision_monitor.rviz" if = "$(eval arg('rviz'))"/>

          
</launch>