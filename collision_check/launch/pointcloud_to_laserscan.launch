<launch>
    <arg name="cloud_in" default="/zed2i/zed_node/point_cloud/cloud_registered"/>
    <arg name="target_frame" default="map" />
    <arg name="laser_out_topic" default="zed/laser_scan"/>
    
    <node name='pointcloud_to_laserscan_node' pkg='pointcloud_to_laserscan' type='pointcloud_to_laserscan_node'>
      <remap from="cloud_in" to="$(arg cloud_in)"/>
      <remap from="scan" to="$(arg laser_out_topic)"/>
      <param name='target_frame' value="$(arg target_frame)"/>
      <rosparam>
         min_height  : -0.5
         max_height  : 0.5
         angle_min   : -1.5708
         angle_max   : 1.5708
         
         angle_increment : 0.0087
         scan_time : 0.3333
         range_min : 0.45
         range_max : 20
         concurrency_level : 1
         use_inf : false
      </rosparam>
    </node>

</launch>